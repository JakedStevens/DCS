@{
	ViewData["Title"] = "Products";
	@model DynamicCoffeeSellers.ViewModels.ProductViewModel;
}

<div class="shop-container">
	<h1 class="dcs-h">Shop DCS</h1>

	<div class="container row tile-wrapper">
		@{var i = 1;}
		@foreach (var product in Model.AllProducts)
		{
			<div class="coffee-card col-12 col-md-4 col-lg-3">
				<div class="coffee-tile">
					<img src="@product.ImgUrl" class="tile-img" alt="@product.Name">
					<div class="btn-wrapper">
						<button class="btn btn-dark info-btn" data-toggle="modal" data-target="#modal-@(i)">More Info</button>
						<a class="btn btn-dark request-btn" href="/Home/RequestForm/@product.Name">Request Info</a>
					</div>
				</div>
				<p class="card-name">@product.Name</p>
			</div>

			<div class="modal fade" id="modal-@(i)" tabindex="-1" role="dialog" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">@product.Name</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							@product.Description
						</div>
						<p class="card-text">Availability: @product.QuantityOnHand lbs</p>
						<div class="modal-footer">
							<a class="btn btn-dark" href="/Home/RequestForm/@product.Name">Request Info</a>
							<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
			i++;
		}

	</div>
</div>
